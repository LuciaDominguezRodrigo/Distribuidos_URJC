<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Urban Threads</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link rel='stylesheet' type='text/css' media='screen' href='/css/index.css'>

    <link rel="icon" href="/img/logo.png" type="image/png">

<STYLE>
    .card-category {
        background-color: #dcfad3;
        border: 1px solid #cccccc;
        border-radius: 5px;
        padding: 5px;
        text-align: center;
    }
</STYLE>
</head>
<body>

{{>navbar}}

<!-- Contenido Principal -->
<div class="container fluid mt-4">
        <!-- Contenedor de Productos -->
        <div class="col-lg-12">
            <h1 class = "titulo">Productos Del mes</h1>
            <div>
                <form action="/filter" id="filterSelection" method="GET">
                    <div class="form-group">
                        <label for="filterSelect">Filtrar por:</label>
                        <select class="form-control" name="selectedFilter" onchange="filtrarProductos()" required>
                            <option disabled selected>Selecciona un filtro: </option> <!-- Opción inicial deshabilitada -->
                            {{#allCategories}}
                                <option value="{{name}}">{{name}}</option>
                            {{/allCategories}}
                            <option value="" class="text-danger font-weight-bold">Desactivar filtros</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="row" id="productsChart">
                <!-- Card de Producto -->
                {{#products}}
                    <div class="col-md-3 mb-4" id="product-{{id}}">
                        <div class="card">
                            <img src="{{photo}}" class="foto card-img-top" alt="  ¡Ups, foto no cargada!">
                            <div class="card-body">
                                <h5 class="card-title">{{name}}</h5>
                                {{#category}} <!-- Aquí comienza el bloque para acceder a la categoría -->
                                    <h5 class="card-category" style="background-color: {{color}}">{{name}}</h5>
                                {{/category}} 
                                <p class="card-text">{{description}}</p>
                                <form action="/product/{{id}}" method="GET">
                                    <button class="btn btn-primary" type="submit">Ver Detalles</button>
                                </form>
                            </div>
                        </div>
                    </div>
                {{/products}}
            </div>

            {{^products}}
                <div class="text-center">
                    <h5 class="no-events-message">No hay productos.</h5>
                </div>
            {{/products}}

            <div class="container text-center mt-4" id="home-load-more-btn-div">
                <div class="row justify-content-center">
                    <div class="col-auto">
                        <button class="btn btn-primary" id="home-load-more-btn" onclick="loadMore()">Cargar más productos</button>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<!-- Footer -->
<footer class="bg-dark text-white text-center py-3 mt-4">
    <p>&copy; 2024 Urban Threads</p>
</footer>

<!-- Bootstrap JS y dependencias -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<script src="/js/index.js"></script>
</body>
</html>
